            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <Button fx:id="viewBalanceButton" layoutX="83.0" layoutY="162.0" mnemonicParsing="false" onAction="#viewBalance" prefHeight="37.0" prefWidth="214.0"
