<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.admin.MenuAdminController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <!--<ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/admin_icon.png"/>
            </image>
        </ImageView>-->
        <Label styleClass="header-label" text="Меню администратора" />
    </HBox>

    <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
        <Button onAction="#openUserManagement" prefHeight="42.0" prefWidth="220.0" styleClass="admin-button" text="Управление пользователями" />
        <Button onAction="#openCategoryManagement" styleClass="admin-button" text="Управление категориями" />
        <Button onAction="#openStatistics" styleClass="admin-button" text="Просмотр статистики" />
        <Button fx:id="backButton" onAction="#logout" styleClass="admin-cancel-button" text="Выйти" />
    </VBox>
</VBox>
