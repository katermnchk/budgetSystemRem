<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500.0" prefWidth="600.0" styleClass="root"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controllers.TransactionHistoryController"
      stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <!--<ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/history_icon.png"/>
            </image>
        </ImageView>-->
        <Label text="История транзакций" styleClass="header-label"/>
    </HBox>

    <TableView fx:id="transactionTable" prefHeight="350.0" styleClass="my-table">
        <columns>
            <TableColumn fx:id="dateColumn" text="Дата" prefWidth="120"/>
            <TableColumn fx:id="accountColumn" text="Счет" prefWidth="100"/>
            <TableColumn fx:id="categoryColumn" text="Категория" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="Сумма (BYN)" prefWidth="100"/>
            <TableColumn fx:id="descriptionColumn" text="Описание" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Обновить" onAction="#refreshHistory" styleClass="my-button"/>
        <Button text="Закрыть" onAction="#closeWindow" styleClass="cancel-button"/>
    </HBox>
</VBox>