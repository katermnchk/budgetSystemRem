<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500.0" prefWidth="600.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.user.TransactionHistoryController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <!--<ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/history_icon.png"/>
            </image>
        </ImageView>-->
        <Label prefHeight="54.0" prefWidth="203.0" styleClass="header-label" text="История транзакций" />
    </HBox>

    <TableView fx:id="transactionTable" prefHeight="350.0" styleClass="my-table">
        <columns>
            <TableColumn fx:id="dateColumn" prefWidth="120" text="Дата" />
            <TableColumn fx:id="accountColumn" prefWidth="100" text="Счет" />
            <TableColumn fx:id="categoryColumn" prefWidth="100" text="Категория" />
            <TableColumn fx:id="amountColumn" prefWidth="100" text="Сумма (BYN)" />
            <TableColumn fx:id="descriptionColumn" prefWidth="150" text="Описание" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" prefHeight="84.0" prefWidth="560.0" spacing="15">
        <Button onAction="#refreshHistory" styleClass="my-button" text="Обновить" />
        <Button onAction="#closeWindow" styleClass="cancel-button" text="Закрыть" />
    </HBox>
</VBox>
