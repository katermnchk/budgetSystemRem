<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      styleClass="root" stylesheets="@../css/styles.css"
      fx:controller="client.controllers.admin.UserManagementController">
    <TableView fx:id="userTable" prefWidth="306.0" styleClass="my-table">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="loginColumn" prefWidth="150" text="Логин" />
            <TableColumn fx:id="roleColumn" prefWidth="100" text="Роль" />
        </columns>
    </TableView>
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="addUserButton" onAction="#addUser" styleClass="my-button" text="Добавить" />
        <Button fx:id="editUserButton" onAction="#editUser" styleClass="my-button" text="Редактировать" />
        <Button fx:id="deleteUserButton" onAction="#deleteUser" styleClass="my-button" text="Удалить" />
        <Button fx:id="backButton" onAction="#back" styleClass="my-button" text="Назад" />
    </HBox>
</VBox>
