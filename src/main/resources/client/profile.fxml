<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" prefWidth="500.0" prefHeight="300.0" styleClass="root"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controllers.ProfileController"
      stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/profile_icon.jpg"/>
            </image>
        </ImageView>
        <Label text="Профиль" styleClass="header-label"/>
    </HBox>

    <GridPane hgap="15" vgap="10" alignment="CENTER">
        <Label text="Имя:" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="firstNameLabel" styleClass="info-label" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Фамилия:" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="lastNameLabel" styleClass="info-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Логин:" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="loginLabel" styleClass="info-label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <Button fx:id="backButton" text="Назад" onAction="#backToMain" styleClass="my-button"/>
</VBox>