<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="30" styleClass="root"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controllers.ProfileController"
      stylesheets="@../css/styles.css">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <VBox alignment="CENTER" spacing="15" styleClass="header">
        <ImageView fx:id="avatarImage" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" styleClass="avatar">
            <image>
                <Image url="@../images/profile_icon.jpg"/>
            </image>
        </ImageView>
        <Label text="Профиль пользователя" styleClass="header-label"/>
    </VBox>

    <VBox styleClass="card" spacing="25" maxWidth="700">
        <GridPane hgap="25" vgap="20" alignment="CENTER">
            <Label text="Имя:" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <HBox styleClass="info-container" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label fx:id="firstNameLabel" styleClass="info-label"/>
                <TextField fx:id="firstNameField" styleClass="my-textfield" visible="false" managed="false" prefWidth="200"/>
            </HBox>

            <Label text="Фамилия:" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <HBox styleClass="info-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label fx:id="lastNameLabel" styleClass="info-label"/>
                <TextField fx:id="lastNameField" styleClass="my-textfield" visible="false" managed="false" prefWidth="200"/>
            </HBox>

            <Label text="Логин:" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <HBox styleClass="info-container" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Label fx:id="loginLabel" styleClass="info-label"/>
                <TextField fx:id="loginField" styleClass="my-textfield" visible="false" managed="false" prefWidth="200"/>
            </HBox>

        </GridPane>

    </VBox>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="backButton" text="Назад" onAction="#backToMain" styleClass="cancel-button"/>
    </HBox>
</VBox>