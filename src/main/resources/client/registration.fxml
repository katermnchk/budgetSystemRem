<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="450.0" prefWidth="700.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.RegistrationController">

    <AnchorPane prefHeight="80.0" styleClass="header">
        <children>
            <Label styleClass="header-label" text="Регистрация" AnchorPane.topAnchor="20.0" />
        </children>
    </AnchorPane>

    <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20" left="40" right="40" top="20" />
        </padding>

        <HBox alignment="CENTER" spacing="15">
            <VBox alignment="CENTER_RIGHT" prefHeight="165.0" prefWidth="144.0" spacing="30">
                <Label styleClass="input-label" text="Имя" />

                <Label styleClass="input-label" text="Фамилия" />
                <Label styleClass="input-label" text="Пароль" />

                <Label styleClass="input-label" text="Логин" />

                <Label styleClass="input-label" text="Подтвердите пароль" />
            </VBox>

            <VBox alignment="CENTER_RIGHT" spacing="10">
                <TextField fx:id="firstName" promptText="Введите имя" styleClass="my-textfield" />
                <TextField fx:id="lastName" promptText="Введите фамилию" styleClass="my-textfield" />
                <PasswordField fx:id="password" promptText="Введите пароль" styleClass="my-textfield" />
                <TextField fx:id="login" promptText="Введите логин" styleClass="my-textfield" />
                <PasswordField fx:id="confirmPassword" promptText="Подтвердите пароль" styleClass="my-textfield" />
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="backButton" onAction="#backToMain" styleClass="cancel-button" text="Назад" />
            <Button fx:id="registrationButton" onAction="#registrationUser" prefWidth="249.0" styleClass="my-button" text="Регистрация" />
        </HBox>
    </VBox>
</VBox>
