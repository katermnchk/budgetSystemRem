<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="client.controllers.LoginController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10" vgap="10">

    <Label text="Логин:"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1"/>

    <Label text="Пароль:" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Войти" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#login"/>
    <Button text="Регистрация" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#register"/>

</GridPane>
