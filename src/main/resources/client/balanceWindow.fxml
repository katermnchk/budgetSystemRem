<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controllers.BalanceWindowController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Текущий баланс" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Label fx:id="totalBalanceLabel" text="Общий бюджет: 0.00 BYN" style="-fx-font-size: 16px;"/>

        <TableView fx:id="accountsTable" prefHeight="200.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="accountNameColumn" text="Счет" prefWidth="280.0"/>
                <TableColumn fx:id="balanceColumn" text="Баланс (BYN)" prefWidth="280.0"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Обновить" onAction="#refreshBalance"/>
            <Button text="Закрыть" onAction="#closeWindow"/>
        </HBox>
    </VBox>
</AnchorPane>