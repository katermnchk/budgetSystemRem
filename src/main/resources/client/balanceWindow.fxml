<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controllers.BalanceWindowController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Текущий баланс" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Label fx:id="balanceLabel" text="0.00 BYN" style="-fx-font-size: 24px;"/>

        <Button text="Обновить" onAction="#refreshBalance"/>
        <Button text="Закрыть" onAction="#closeWindow"/>
    </VBox>
</AnchorPane>