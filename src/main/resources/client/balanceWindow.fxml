<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" styleClass="root" stylesheets="@../css/styles.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.user.BalanceWindowController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox alignment="CENTER" spacing="10">
      <!--  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/balance_icon.png"/>
            </image>
        </ImageView>-->
        <Label styleClass="header-label" text="Текущий баланс">
         <font>
            <Font name="Book Antiqua" size="15.0" />
         </font></Label>
    </HBox>

    <Label fx:id="totalBalanceLabel" styleClass="total-balance-label" text="Общий бюджет: 0.00 BYN">
      <font>
         <Font size="15.0" />
      </font></Label>

    <TableView fx:id="accountsTable" prefHeight="200.0" styleClass="my-table">
        <columns>
            <TableColumn fx:id="accountNameColumn" prefWidth="280.0" text="Счет" />
            <TableColumn fx:id="balanceColumn" prefWidth="280.0" text="Баланс (BYN)" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" prefHeight="105.0" prefWidth="560.0" spacing="15">
        <Button onAction="#refreshBalance" styleClass="my-button" text="Обновить" />
        <Button onAction="#closeWindow" styleClass="cancel-button" text="Отмена" />
    </HBox>
</VBox>
