<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controllers.CategoryManagerController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Управление категориями" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="categoryTable">
        <columns>
            <TableColumn fx:id="nameColumn" text="Название" prefWidth="150"/>
            <TableColumn fx:id="typeColumn" text="Тип" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Новая категория:"/>
        <TextField fx:id="nameField" promptText="Введите название"/>
        <ComboBox fx:id="typeComboBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="INCOME"/>
                    <String fx:value="EXPENSE"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="Добавить" onAction="#addCategory"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Удалить выбранную" onAction="#deleteCategory"/>
        <Button text="Обновить" onAction="#refreshCategories"/>
        <Button text="Закрыть" onAction="#closeWindow"/>
    </HBox>
</VBox>