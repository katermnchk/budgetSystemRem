<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<VBox alignment="CENTER" spacing="30" styleClass="root" stylesheets="@../css/history_styles.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controllers.user.CategoryManagerController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <HBox alignment="CENTER" spacing="15" styleClass="header">
        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/categories.png"/>
            </image>
        </ImageView>
        <Label text="Управление категориями" styleClass="header-label"/>
    </HBox>

    <VBox styleClass="card" spacing="20" maxWidth="800">

        <TableView fx:id="categoryTable" styleClass="my-table" prefHeight="300">
            <columns>
                <TableColumn fx:id="nameColumn" text="Название" prefWidth="200"/>
                <TableColumn fx:id="typeColumn" text="Тип" prefWidth="150"/>
            </columns>
        </TableView>

        <GridPane hgap="20" vgap="15" alignment="CENTER">
            <Label text="Название:" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200"/>

            <Label text="Тип:" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="typeComboBox" styleClass="combo-box" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Доход"/>
                        <String fx:value="Расход"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </GridPane>

        <HBox alignment="CENTER" spacing="15">
            <Button text="Добавить категорию" onAction="#addCategory" styleClass="action-button"/>
            <Button text="Удалить категорию" onAction="#deleteCategory" styleClass="action-button"/>
            <Button text="Обновить" onAction="#refreshCategories" styleClass="action-button"/>
            <Button text="Закрыть" onAction="#closeWindow" styleClass="cancel-button"/>
        </HBox>
    </VBox>
</VBox>