<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox prefHeight="500.0" prefWidth="600.0" styleClass="root"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controllers.CategoryManagerController"
      stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER" spacing="10">
      <!--  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/category_icon.png"/>
            </image>
        </ImageView>-->
        <Label text="Управление категориями" styleClass="header-label"/>
    </HBox>

    <TableView fx:id="categoryTable" prefHeight="300.0" styleClass="my-table">
        <columns>
            <TableColumn fx:id="nameColumn" text="Название" prefWidth="150"/>
            <TableColumn fx:id="typeColumn" text="Тип" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Новая категория:" styleClass="input-label"/>
        <TextField fx:id="nameField" promptText="Введите название" styleClass="my-textfield"/>
        <ComboBox fx:id="typeComboBox" styleClass="my-combobox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="INCOME"/>
                    <String fx:value="EXPENSE"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="Добавить" onAction="#addCategory" styleClass="my-button"/>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Удалить выбранную" onAction="#deleteCategory" styleClass="expense-button"/>
        <Button text="Обновить" onAction="#refreshCategories" styleClass="my-button"/>
        <Button text="Закрыть" onAction="#closeWindow" styleClass="cancel-button"/>
    </HBox>
</VBox>