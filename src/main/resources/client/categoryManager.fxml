<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="600.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.user.CategoryManagerController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox alignment="CENTER" spacing="10">
      <!--  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/category_icon.png"/>
            </image>
        </ImageView>-->
        <Label styleClass="header-label" text="Управление категориями" />
    </HBox>

    <TableView fx:id="categoryTable" prefHeight="300.0" styleClass="my-table">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="150" text="Название" />
            <TableColumn fx:id="typeColumn" prefWidth="100" text="Тип" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" prefHeight="94.0" prefWidth="560.0" spacing="10">
        <Label prefHeight="18.0" prefWidth="182.0" styleClass="input-label" text="Новая категория:" />
        <TextField fx:id="nameField" promptText="Введите название" styleClass="my-textfield" />
        <ComboBox fx:id="typeComboBox" styleClass="my-combobox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="INCOME" />
                    <String fx:value="EXPENSE" />
                </FXCollections>
            </items>
        </ComboBox>
        <Button onAction="#addCategory" prefHeight="42.0" prefWidth="222.0" styleClass="my-button" text="Добавить" />
    </HBox>

    <HBox alignment="CENTER" prefHeight="63.0" prefWidth="560.0" spacing="15">
        <Button onAction="#deleteCategory" prefHeight="38.0" prefWidth="179.0" styleClass="expense-button" text="Удалить выбранную" />
        <Button onAction="#refreshCategories" prefHeight="42.0" prefWidth="143.0" styleClass="my-button" text="Обновить" />
        <Button onAction="#closeWindow" prefHeight="42.0" prefWidth="130.0" styleClass="cancel-button" text="Закрыть" />
    </HBox>
</VBox>
