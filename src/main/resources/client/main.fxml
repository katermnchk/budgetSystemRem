<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="700.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.MainController">

    <AnchorPane prefHeight="100.0" styleClass="header">
        <children>
            <Label layoutX="197.0" layoutY="30.0" styleClass="header-label" text="Budget System by Rem" AnchorPane.topAnchor="30.0" />
        </children>
    </AnchorPane>

    <HBox alignment="CENTER" spacing="40" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <ImageView fx:id="welcomeImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/welcome_image.jpg" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" spacing="20">
            <VBox spacing="5">
                <Label styleClass="input-label" text="Логин" />
                <TextField fx:id="login" prefHeight="23.0" prefWidth="155.0" promptText="Логин" styleClass="my-textfield">
               <font>
                  <Font name="Broadway" size="12.0" />
               </font>
               <opaqueInsets>
                  <Insets bottom="15.0" left="15.0" top="15.0" />
               </opaqueInsets></TextField>
            </VBox>

            <VBox prefHeight="43.0" prefWidth="171.0" spacing="5">
                <Label styleClass="input-label" text="Пароль" />
                <PasswordField fx:id="password" prefHeight="23.0" prefWidth="155.0" promptText="Пароль" styleClass="my-textfield" />
            </VBox>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="enterButton" onAction="#authorization" styleClass="my-button" text="Вход" />
                <Button fx:id="registrationButton" onAction="#registration" styleClass="my-button" text="Регистрация" />
            </HBox>
        </VBox>
    </HBox>
</VBox>
